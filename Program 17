#include <stdio.h>

int main()

{
 int a;

    printf("Enter the number of rows to be displayed\n");
    scanf("%d", &a);

    for (int x = 0; x <= a-1; x++)
    {
        for (int z = a-2; z >= x; z--) 
        {
            printf(" ");
        }

        for (int y = 0; y <= x; y++)
        {
            printf("*");
        }

        printf("\n");
    }
}
